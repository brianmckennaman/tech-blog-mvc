<div class="row">
    <div class="col-md-6">
        <h1>Login here</h1>

        <form class="form login-form">
            <div class="form-group">
                <label for="email-login">Enter email</label>
                <input class="form-input" type="text" id="login-email"/>
            </div>
            <div class="form-group">
                <label for="password-login">Enter password</label>
                <input class="form-input" type="password" id="login-password"/>
            </div>
            <div class="form-group">
                <button class="btn btn-secondary" type="submit">Login</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h1>Sign up below</h1>
        <form class="form signup-form">
            <div class="form-group">
                <label for="name-signup">Enter your username</label>
                <input class="form-input" type="text" id="signup-username"/>
            </div>
            <div class="form-group">
                <label for="email-signup">Enter your email</label>
                <input class="form-input" type="text" id="signup-email"/>
            </div>
            <div class="form-group">
                <label for="password-signup">Enter your password</label>
                <input class="form-input" type="password" id="signup-password"/>
            </div>
            <div class="form-group">
                <button class="btn btn-secondary" type="submit">Signup</button>
            </div>
        </form>
    </div>
</div>

<script src="../public/js/login.js"></script>